{
  "compileOnSave": false,
  "name": "storm-react-diagrams",
  "compilerOptions": {
    "suppressExcessPropertyErrors": true,
    "declaration": true,
    "outDir": "@types",
    "target": "es5",
    "sourceMap": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "storm-react-diagrams": ["src/main.ts"]
    },
    "lib": ["dom", "es2015"]
  },
  "exclude": ["node_modules", "**/*.spec.ts", "./dist", "@types"]
}
